{
  "compilerOptions": {
      "types": ["node"],
      "lib": [
        "es6",
        "dom"
     ],
     "target": "es6",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./dist",
     "esModuleInterop": true,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "resolveJsonModule": true,
     "sourceMap": true,
     "skipLibCheck": true,
     "baseUrl": ".",
     "typeRoots": [
        "node_modules/@types"
     ]
  },
  "include": [
      "src/**/*"
  ]
}